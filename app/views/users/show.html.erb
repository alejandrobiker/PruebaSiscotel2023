<h2 class="pb-5 text-center">Ver usuario <strong>ID: <%= @user.id %></strong></h2>
<div class="">
  <div class="row">
    <div class="col-12 col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <td class="table-active w-50">Nombre</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Tipo de persona</td>
            <td><%= @user.type_person %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Identificación</td>
            <td><%= @user.identification %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Correo</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <td class="table-active w-50">Fecha emisión</td>
            <td><%= @user.issuance_date %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Fecha vencimiento</td>
            <td><%= @user.expiration_date %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Teléfono principal</td>
            <td><%= @user.main_phone %></td>
          </tr>
          <tr>
            <td class="table-active w-50">Teléfono secundario</td>
            <td><%= @user.secondary_phone ? @user.secondary_phone : 'nada' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="d-flex justify-content-end">
  <%= link_to "Regresar", users_path, class: "btn btn-secondary mx-2" %>
</div>
